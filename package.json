{
  "name": "@gucciogucci/simply-translation",
  "version": "1.2.0",
  "description": "Simply Translation library",
  "main": "dist/index.min.js",
  "scripts": {
    "pretest": "npm run lint",
    "build": "rollup -c",
    "test": "jest",
    "lint": "eslint src/*.js",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GuccioGucci/simply-translation.git"
  },
  "keywords": [
    "react",
    "translation"
  ],
  "author": "Gucci <npm@gucci.com>",
  "license": "LGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/GuccioGucci/simply-translation/issues"
  },
  "homepage": "https://github.com/GuccioGucci/simply-translation#readme",
  "jest": {
    "name": "Simply Translation",
    "roots": [
      "src/"
    ],
    "verbose": true,
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "engines": {
    "node": ">=10.21"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@rollup/plugin-eslint": "^8.0.1",
    "babel-eslint": "^10.1.0",
    "jest": "^26.6.3",
    "rollup": "^2.34.2",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "husky": "^7.0.4"
  }
}
